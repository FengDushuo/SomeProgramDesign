/**index.wxss**/
.main {
    width: 100%;
    height: 100vh;
    position: relative;
}
.bgimg {
    width: 100%;
    height: 100%;
    display: block;
}
.avator{
  position:absolute;
  top:16%;
  left:50%;
  transform:translateX(-50%);
  border-radius:50%;
  border:4rpx solid #f0e9cd;
  width:150rpx;
  height:150rpx;
}
.avator image{
  width:150rpx;
  height:150rpx;
  border-radius:50%;
}
.username{
  font-size:28rpx;
  color:#977c39;
  position:absolute;
  top:32%;
  left:50%;
  transform:translateX(-50%);
}
.username text{
  margin-left: 20rpx;
}
.introduction{
  width:600rpx;
  position:absolute;
  top:36%;
  left:50%;
  transform:translateX(-50%);
  text-align:center;
  font-size:28rpx;
  color:#977c39;
  line-height: 50rpx;
}
.subject{
  width:560rpx;
  position:absolute;
  top:48%;
  left: 50%;
  color:#d0393e;
  font-size:32rpx;
  display:flex;
  justify-content:space-between;
  align-items:center;
  transform:translateX(-50%);
}
.choice{
  position: absolute;
  display: flex;
  width:560rpx;
  align-items:center;
  top:53%;
  left:50%;
  transform:translateX(-50%);
  color:#977c39;
}
.choice .slider-center{
  flex: 1;
}
.lssue{
  top:67%;
  position:absolute;
  width:400rpx;
  left:50%;
  transform:translateX(-50%);
}
.lssue .lssue-button{
  width:400rpx;
  background:#ed4a37;
  border-radius:40rpx;
  color:#fff;
  height:80rpx;
  line-height:80rpx;
  box-shadow:0rpx 6rpx 0rpx #a51e1b;
  text-align:center;
  font-size: 32rpx;
}
.service{
  position: absolute;
  left: 50%;
  bottom: 30rpx;
  transform: translateX(-50%);
  font-size:28rpx;
}
.service[plain]{
  border: none;
  color:#ffe;
  padding: 0;
}